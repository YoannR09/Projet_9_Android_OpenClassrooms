<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:orientation="vertical">
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/image_item_property"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"/>
        <LinearLayout
            app:layout_constraintStart_toStartOf="@id/image_item_property"
            app:layout_constraintEnd_toEndOf="@id/image_item_property"
            app:layout_constraintBottom_toBottomOf="@id/image_item_property"
            android:layout_width="180dp"
            android:background="#80000000"
            android:layout_height="@id/image_item_property">
                <TextView
                    android:id="@+id/img_piece_detail"
                    android:layout_margin="8dp"
                    android:text="Title"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>